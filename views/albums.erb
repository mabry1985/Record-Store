<h1>All Sales Vinyl</h1>

<h3>Available Records</h3>

<% if @albums.any? %>
  <ul>
    <% @albums.each do |album| %>
      <li><a href="/albums/<%= album.id %>"><%= album.name %></a></li>
  <% end %>
  </ul>
<% else %>
  <p>There are currently no records to display.</p>
<% end %>

<a href="/albums/new">Add a New Album</a>

<form action="/albums">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<h3>Records Sold</h3>

<% if @albums_sold.any? %>
  <ul>
    <% @albums_sold.each do |album| %>
      <li><a href=""><%= album.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>No albums have neen sold</p>
<% end %>
